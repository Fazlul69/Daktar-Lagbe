<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PhoneActivity">


    <LinearLayout
        android:layout_width="346dp"
        android:layout_height="70dp"
        android:id="@+id/numberOption"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="247dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:orientation="horizontal"
        android:weightSum="2"
        android:background="@drawable/phone_background"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:id="@+id/phoneLogoLayout"
            android:layout_width="70dp"
            android:layout_height="65dp"
            android:layout_marginLeft="2dp"
            android:background="@drawable/phone_anim_white"
            android:layout_gravity="center"
            android:layout_weight="1">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="40dp"
                android:id="@+id/phoneLogo"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"
                android:src="@drawable/smartphone" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="266dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <EditText
                android:id="@+id/phoneNumber"
                android:layout_width="match_parent"
                android:layout_height="66dp"
                android:layout_marginTop="2dp"
                android:layout_marginRight="2dp"
                android:background="@drawable/number_background"
                android:hint="Phone Number"
                android:textColorHint="#706A6A" />
        </LinearLayout>


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="175dp"
        android:weightSum="2"
        app:layout_constraintTop_toBottomOf="@+id/numberOption">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="36dp"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_marginStart="36dp">

            <ImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:id="@+id/previousBtn"
                android:background="@drawable/arrow_back_color_ash"
                android:elevation="5dp"
                android:padding="5dp"
                android:layout_marginLeft="2dp"
                android:src="@drawable/left_arrow" />

            <TextView
                android:layout_width="70dp"
                android:layout_height="30dp"
                android:text="Back"
                android:textColor="#000"
                android:textSize="20sp"
                android:gravity="center"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="36dp"
            android:orientation="vertical"
            android:layout_weight="1"
            android:gravity="end"
            android:layout_marginRight="36dp">

            <ImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:id="@+id/nextBtn"
                android:background="@drawable/arrow_back_color_ash"
                android:elevation="5dp"
                android:padding="5dp"
                android:layout_marginRight="2dp"
                android:src="@drawable/right_arrow" />

            <TextView
                android:layout_width="70dp"
                android:layout_height="30dp"
                android:text="Next"
                android:textColor="#000"
                android:textSize="20sp"
                android:gravity="center"/>
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>