<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignUp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/signup_field"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Please type your information below:"
            android:textSize="16sp"
            android:textColor="#707070"
            android:layout_marginTop="100dp"
            android:layout_marginLeft="60dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Name: "
                android:textColor="#B6B6B6"
                android:textSize="16sp"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="40dp"/>

            <EditText
                android:id="@+id/userName"
                android:layout_width="210dp"
                android:layout_height="50dp"
                android:textColor="#00F5EE"
                android:textSize="16sp"
                android:gravity="center"
                android:background="@drawable/signup_style"
                android:layout_marginLeft="36dp"
                android:layout_marginTop="30dp" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Gender: "
                android:textColor="#B6B6B6"
                android:textSize="16sp"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="40dp"/>
      
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/gMale"
                    android:layout_width="105dp"
                    android:layout_height="60dp"
                    android:layout_marginLeft="36dp"
                    android:layout_marginTop="20dp"
                    android:text="Male"
                    android:textSize="16sp"
                    android:textColor="#707070"
                    android:gravity="center"
                    android:background="@drawable/otp_style"/>
                <TextView
                    android:id="@+id/gFemale"
                    android:layout_width="105dp"
                    android:layout_height="60dp"
                    android:layout_marginLeft="36dp"
                    android:layout_marginTop="20dp"
                    android:text="Female"
                    android:textSize="16sp"
                    android:textColor="#707070"
                    android:gravity="center"
                    android:background="@drawable/otp_style"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="69dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="30dp"
                android:text="Age: "
                android:textColor="#B6B6B6"
                android:textSize="16sp" />
            <EditText
                android:id="@+id/age"
                android:layout_width="105dp"
                android:layout_height="60dp"
                android:layout_marginLeft="36dp"
                android:layout_marginTop="35dp"
                android:textColor="#00F5EE"
                android:textSize="16sp"
                android:gravity="center"
                android:inputType="number"
                android:maxLength="2"
                android:background="@drawable/otp_style"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:weightSum="2"
        app:layout_constraintTop_toBottomOf="@+id/signup_field">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="36dp"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_marginStart="36dp">

            <ImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:id="@+id/previousBtn"
                android:background="@drawable/arrow_back_color_ash"
                android:elevation="5dp"
                android:padding="5dp"
                android:layout_marginLeft="2dp"
                android:src="@drawable/left_arrow" />

            <TextView
                android:layout_width="70dp"
                android:layout_height="30dp"
                android:text="Back"
                android:textColor="#000"
                android:textSize="20sp"
                android:gravity="center"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:id="@+id/layoutBtn"
            android:layout_weight="1"
            android:gravity="end"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="217dp"
                android:layout_height="90dp"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="364dp"
                    android:layout_height="70dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="10dp"
                    android:scaleX="1.3"
                    android:scaleY="1.4"
                    android:src="@drawable/btnbackdesign" />

                <ImageView
                    android:id="@+id/nextBtn"
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    android:background="@drawable/arrow_back_color_white"
                    android:elevation="5dp"
                    android:padding="5dp"
                    android:src="@drawable/right_arrow_colored"
                    android:layout_marginTop="-77dp"
                    android:layout_marginLeft="85dp" />


            </LinearLayout>

        </LinearLayout>


    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>